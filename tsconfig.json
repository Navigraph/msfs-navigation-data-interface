{
    "compilerOptions": {
      "removeComments": true,
      "sourceMap": true,
      "target": "es6",
      "module":"commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["es2018", "dom"],
      "outDir": "build",
      "sourceRoot": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["**/*.ts"],
    "exclude": ["**/node_modules"]
  }