<?xml version="1.0" encoding="utf-8" ?>

<ModelInfo>

	<LODS>
		<!-- Highest LOD -->
		<!-- minimum display size in % (should be bounding sphere vertical screen size, sphere will often be slightly larger than you expect) -->
		<!-- default minSize is 0 -->
		<LOD minSize="50" ModelFile="GaugeAircraft_Interior_LOD00.gltf"/>
		<LOD minSize="20" ModelFile="GaugeAircraft_Interior_LOD01.gltf"/>
		<LOD minSize="10" ModelFile="GaugeAircraft_Interior_LOD02.gltf"/>
		<LOD minSize="5" ModelFile="GaugeAircraft_Interior_LOD03.gltf"/>
		<LOD minSize="1" ModelFile="GaugeAircraft_Interior_LOD04.gltf"/>
	</LODS>

	<Behaviors>
		<Include ModelBehaviorFile="Asobo\Common.xml"/>

		<Component ID="SCREEN" Node="Screens">
			<UseTemplate Name="ASOBO_GT_Emissive_Gauge">
				<PART_ID>SCREEN</PART_ID>
				<EMISSIVE_CODE>1</EMISSIVE_CODE>
			</UseTemplate>
		</Component>
	</Behaviors>

</ModelInfo>
